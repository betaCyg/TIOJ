#include<iostream>
#include<algorithm>
using namespace std ;

int main()
{
  int n ;
	long long sum ;
  int point[100000] ;
  while(cin>>n)
  {
		sum=0 ;
    for(int i=0 ; i<n ; i++)
    {
      cin>>point[i] ;
    }
    sort(point,point+n) ;
		sum=point[0]*(n-1) ;
		for(int i=1 ; i<n ; i++)
		{
			sum+=point[i]*(n-i) ;
		}
		cout<<sum<<endl;
  }
  return 0 ;
}
